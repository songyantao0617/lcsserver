<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generator.properties"/>
    <context id="SqlServerContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 为模型生成序列化方法-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!-- 为生成的Java模型创建一个toString方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <!--生成mapper.xml时覆盖原文件-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <commentGenerator>
<!--            &lt;!&ndash; 是否去除自动生成的注释 true：是 ： false:否 &ndash;&gt;-->
            <property name="suppressAllComments" value="false"/>
<!--            <property name="suppressDate" value="true"/>-->
<!--            <property name="addRemarkComments" value="true"/>-->
        </commentGenerator>

        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.connectionURL}"
                        userId="${jdbc.userId}"
                        password="${jdbc.password}">
<!--            &lt;!&ndash;解决mysql驱动升级到8.0后不生成指定数据库代码的问题&ndash;&gt;-->
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.pxccn.PxcDali2.server.model" targetProject="src\main\java"/>

        <sqlMapGenerator targetPackage="com.pxccn.PxcDali2.server.mapper" targetProject="src\main\resources"/>

        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.pxccn.PxcDali2.server.mapper"
                             targetProject="src\main\java"/>
        <!--生成全部表tableName设为%-->
<!--        <table tableName="%">-->
<!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
<!--        </table>        -->

        <table tableName="cabinet_V2">
<!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
        </table>

        <table tableName="cabinet_module_V2">
            <!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
        </table>

        <table tableName="lights_V2">
            <!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
        </table>

        <table tableName="points_V2">
            <!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
        </table>

        <table tableName="room_light_map_V3">
            <!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
        </table>

        <table tableName="room_trigger_V3">
            <!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
        </table>

        <table tableName="room_unit_V3">
            <!--            <generatedKey column="id" sqlStatement="SqlServer" identity="true"/>-->
        </table>


    </context>
</generatorConfiguration>